<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#2196F3"
    tools:context="com.example.OnlineCalucalor.ui.dashboard.DashboardFragment">


    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="99dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Возраст:"
        android:textAlignment="center"
        android:textColor="@color/p5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <TextView
        android:id="@+id/text_dashboard2"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Пол:"
        android:textAlignment="center"
        android:textColor="@color/p5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <EditText
        android:id="@+id/ED1"
        android:layout_width="143dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="149dp"
        android:layout_height="29dp"
        android:entries="@array/spinner"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/gerb"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/white"
        android:onClick="onBtn1Click"
        android:text="Индекс массы тела"
        android:textAllCaps="false"
        android:textColor="@color/p5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="@color/white"
        android:onClick="onBtn3Click"
        android:text="Коэффициент выносливости"
        android:textAllCaps="false"
        android:textColor="@color/p5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/white"
        android:onClick="onBtn2Click"
        android:text="Уровень двигательный активности"
        android:textAllCaps="false"
        android:textColor="@color/p5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_marginTop="336dp"
        android:backgroundTint="@color/white"
        android:onClick="onBtn5Click"
        android:text="Жизненный индекс"
        android:textAllCaps="false"
        android:textColor="@color/p5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="339dp"
        android:layout_height="55dp"
        android:layout_marginTop="376dp"
        android:backgroundTint="@color/white"
        android:onClick="onBtn6Click"
        android:text="Циркулярно-респираторный коэффициент Скибински"
        android:textAllCaps="false"
        android:textColor="@color/p5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_marginTop="424dp"
        android:backgroundTint="@color/white"
        android:onClick="onBtn7Click"
        android:text="Вегетативный индекс Кердо"
        android:textAllCaps="false"
        android:textColor="@color/p5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/allTests"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_marginTop="504dp"
        android:backgroundTint="@color/white"
        android:onClick="onNachClick"
        android:text="Пройти все тесты"
        android:textAllCaps="false"
        android:textColor="@color/p5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="339dp"
        android:layout_height="60dp"
        android:layout_marginTop="276dp"
        android:backgroundTint="@color/white"
        android:onClick="onBtn4Click"
        android:text="Уровень регуляции сердечно-сосудистой системы"
        android:textAllCaps="false"
        android:textColor="@color/p5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:layout_marginTop="464dp"
        android:backgroundTint="@color/white"
        android:onClick="onBtn8Click"
        android:text="Индекс функциональных изменений"
        android:textAllCaps="false"
        android:textColor="@color/p5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>